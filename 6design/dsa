      <script>
        $(document).ready(function () {
          var scene01Num = 1;
          $(window).scroll(function () {
            var scrollTop = $(document).scrollTop();
            if (scrollTop > 400 && scene01Num == 1) {
              scene01Num = 0;
              $("#skill .in_box01")
                .stop().delay(0).css({ right: "400px" }).animate({ right: "60px" }, 1000); // html/css
              $("#skill .in_box02")
                .stop().delay(500).css({ right: "400px" }).animate({ right: "60px" }, 1000); // javascript
              $("#skill .in_box03")
                .stop().delay(1000).css({ right: "400px" }).animate({ right: "60px" }, 1000);// jquery
              $("#skill .in_box04")
                .stop().delay(1500).css({ right: "400px" }).animate({ right: "60px" }, 1000); // node.js
            } else if (scrollTop < 200 && scene01Num == 0) {
              scene01Num = 1;
              $("#skill .in_box01")
                .stop().css({ right: "60px" }).animate({ right: "400px" }, 1000);
              $("#skill .in_box02")
                .stop().css({ right: "60px" }).animate({ right: "400px" }, 1000);
              $("#skill .in_box03")
                .stop().css({ right: "60px" }).animate({ right: "400px" }, 1000);
              $("#skill .in_box04")
                .stop().css({ right: "60px" }).animate({ right: "400px" }, 1000);
            }
          });
        });